  }

  .map {
    max-width: 400px;
    margin-left: 60px;
    margin-top: 50px;
    margin-bottom: 50px;
  }

  @media (min-width: 700px) {
    .cafe {
      max-width: 1000px;
      margin-top: 100px;
    }

    .map {
      max-width: 1000px;
      margin-left: 230px;
      margin-top: 50px;
      margin-bottom: 100px;
    }
  }
</style>
